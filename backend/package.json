		"@types/kcors": "^2.2.3",
		"@types/koa": "^2.11.3",
		"@types/koa-bodyparser": "^4.3.0",
		"@types/koa-router": "^7.4.1",
		"@types/mocha": "^9.1.1",
		"chai": "^4.3.6",
		"mocha": "^10.0.0",
		"node-dev": "^4.0.0",
		"ts-node": "^8.10.2",
		"tslint": "^6.1.2",
		"typescript": "^3.9.5"
	},
	"dependencies": {
		"boom": "^7.2.1",
